<tfoot>
<tr>
  <td colspan="2" class="foot">
    <%= t "staff_order.original_price" %>
  </td>
  <td colspan="1" class="head">
    <%= number_to_currency order.original_price %>
  </td>
  <td colspan="3" class="foot">
    <%= t "staff_order.total_notdiscount" %>
  </td>
  <td class="foot uk-text-left foot" colspan="3">
    <%= number_to_currency order.subtotal %>
  </td>
</tr>
<tr>
  <td colspan="3" class="foot"></td>
  <td colspan="2" class="foot">
    <div class="btn btn-add-dish btn-voucher">
      <%= t "staff_order.voucher_add" %>
    </div>
  </td>
  <td colspan="1" class="foot">
    <%= t "staff_order.voucher_discount" %></td>
  <td class="foot" colspan="3" id="order-discount">
    - <%= order.discount %>%
  </td>
</tr>
<tr>
  <td colspan="3" class="foot"></td>
  <td colspan="2" class="foot"></td>
  <td colspan="1" class="foot"></td>
  <td class="foot" colspan="3" id="membership-discount" >
  </td>
</tr>
<tr>
  <td class="total-price" colspan="6" align="right">
    <strong><%= t "staff_order.total" %></strong>
  </td>
  <td class="total-price" colspan="3" id="order-total" align="right">
    <strong>
      <%= number_to_currency order.price_final %>
    </strong>
  </td>
</tr>
</tfoot>
