<table class="items-table">
  <thead>
  <tr>
    <th><%= t "staff_order.product" %></th>
    <th><%= t "staff_order.type" %></th>
    <th><%= t "staff_order.original_price" %></th>
    <th><%= t "staff_order.quantity" %></th>
    <th><%= t "admin.combos.combo.discount" %></th>
    <th><%= t "staff_order.subtotal" %></th>
    <th><%= t "staff_order.status" %></th>
    <th colspan="2" class="text-center"><%= t "admin.orders.order.action" %>
    </th>
  </tr>
  </thead>
  <%= render "admin/orders/order_item_current", order: order %>
  <tbody id="new-dish-row">
  </tbody>
  <tbody>
    <tr>
      <td class="btn-add-dish-row">
        <% if can? :manage, :order %>
          <% unless order.done? %>
            <h4 class="dp-inline">
              <div class="btn btn-add-dish" id="btn-add-dish">
                <%= t "staff_order.add_dish" %></div>
            </h4>
          <% end  %>
          <td colspan="7"></td>
          <td>
            <h4 class="dp-inline">
              <div class="btn btn-add-dish" id="btn-save-order">
                <%= t "order_detail.save" %></div>
            </h4>
          </td>
        <% end %>
      </td>
    </tr>
  </tbody>
  <%= render "admin/orders/order_item_footer", order: order %>
</table>
