<section id="login" class="parallax-section section-box">
  <div class="login-form">
    <h1 class="stylish-heading h2style text-center">
      <%= t "flash.order.check_your_order" %>
    </h1>
    <%= form_for :order, url: orders_path, method: :get do |f| %>
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email, class: "form-control form-group",
        placeholder: t("order.your_email") %>
      <%= f.label :order_code, class: "form-label" %>
      <%= f.text_field :code, class: "form-control form-group",
        placeholder: t("order.your_order_code") %>
      <%= f.submit t("order.submit"), class: "btn btn-primary log-btn" %>
    <% end %>
  </div>
</section>
